@model IEnumerable<CategoryGetDto>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td><a asp-controller="category" asp-action="update" asp-route-id="@item.Id"><i class="far fa-pen-to-square"> </i></a></td>
                    <td><a asp-controller="category" asp-action="remove" asp-route-id="@item.Id"><i class="fas fa-trash-can"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="category" asp-action="create" class="btn btn-success">Create category</a>
</div>
@model BlogUpdateDto
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Title" />
            <span class="text text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Description" />
            <span class="text text-danger" asp-validation-for="@Model.Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.formFile" class="form-label"></label>
            <input accept="image/*" type="file" class="form-control" asp-for="@Model.formFile" />
            <span class="text text-danger" asp-validation-for="@Model.formFile"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        @Html.AntiForgeryToken();
    </form>
</div>

